<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <!-- Base Window Style with Enhanced Fluent Design -->
    <Style x:Key="BaseWindowStyle" TargetType="{x:Type ui:FluentWindow}">
        <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        <Setter Property="AllowsTransparency" Value="False"/>
        <Setter Property="ResizeMode" Value="CanResize"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="Auto"/>
        <Setter Property="RenderOptions.ClearTypeHint" Value="Enabled"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="WindowBackdropType" Value="Mica"/>
        <Setter Property="ExtendsContentIntoTitleBar" Value="True"/>
        <Setter Property="WindowCornerPreference" Value="Round"/>
    </Style>

    <!-- Main Window Style with Modern Appearance -->
    <Style x:Key="MainWindowStyle" TargetType="{x:Type ui:FluentWindow}" BasedOn="{StaticResource BaseWindowStyle}">
        <Setter Property="MinWidth" Value="800"/>
        <Setter Property="MinHeight" Value="600"/>
        <Setter Property="Width" Value="1200"/>
        <Setter Property="Height" Value="800"/>
        <Setter Property="WindowStartupLocation" Value="CenterScreen"/>
        <Setter Property="Icon" Value="pack://application:,,,/Resources/icon.ico"/>
        <Setter Property="Background" Value="{DynamicResource ApplicationBackgroundBrush}"/>
    </Style>

    <!-- Dialog Window Style -->
    <Style x:Key="DialogWindowStyle" TargetType="{x:Type ui:FluentWindow}" BasedOn="{StaticResource BaseWindowStyle}">
        <Setter Property="MinWidth" Value="400"/>
        <Setter Property="MinHeight" Value="300"/>
        <Setter Property="Width" Value="600"/>
        <Setter Property="Height" Value="400"/>
        <Setter Property="WindowStartupLocation" Value="CenterOwner"/>
        <Setter Property="ResizeMode" Value="CanResize"/>
        <Setter Property="ShowInTaskbar" Value="False"/>
    </Style>

    <!-- Enhanced Card Container Style with Modern Effects -->
    <Style x:Key="ContainerCardStyle" TargetType="{x:Type ui:Card}" BasedOn="{StaticResource FluentCardStyle}">
        <Setter Property="Padding" Value="{StaticResource LargeMargin}"/>
        <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
        <Setter Property="Effect" Value="{StaticResource CardShadowEffect}"/>
    </Style>

    <!-- Compact Card Style for smaller content -->
    <Style x:Key="CompactCardStyle" TargetType="{x:Type ui:Card}" BasedOn="{StaticResource ContainerCardStyle}">
        <Setter Property="Padding" Value="{StaticResource MediumMargin}"/>
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
    </Style>

    <!-- Elevated Card Style for important content -->
    <Style x:Key="ElevatedCardStyle" TargetType="{x:Type ui:Card}" BasedOn="{StaticResource ContainerCardStyle}">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{DynamicResource SystemChromeBlackMediumColor}"
                                  Direction="270" 
                                  ShadowDepth="4" 
                                  BlurRadius="16" 
                                  Opacity="0.25" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Enhanced Typography Styles -->
    <Style x:Key="SectionHeaderStyle" TargetType="{x:Type ui:TextBlock}">
        <Setter Property="FontTypography" Value="BodyStrong"/>
        <Setter Property="Margin" Value="{StaticResource MediumMargin}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="SubsectionHeaderStyle" TargetType="{x:Type ui:TextBlock}">
        <Setter Property="FontTypography" Value="Body"/>
        <Setter Property="Margin" Value="0,8,0,4"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="PropertyLabelStyle" TargetType="{x:Type ui:TextBlock}">
        <Setter Property="FontTypography" Value="Caption"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
    </Style>

    <Style x:Key="DescriptionTextStyle" TargetType="{x:Type ui:TextBlock}">
        <Setter Property="FontTypography" Value="Caption"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorTertiaryBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="16"/>
    </Style>

    <!-- Adaptive Typography Styles -->
    <Style x:Key="AdaptiveBodyStyle" TargetType="{x:Type ui:TextBlock}">
        <Setter Property="FontTypography" Value="Body"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <Style x:Key="AdaptiveCaptionStyle" TargetType="{x:Type ui:TextBlock}">
        <Setter Property="FontTypography" Value="Caption"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <!-- Title Bar Text Style -->
    <Style x:Key="TitleBarTextStyle" TargetType="{x:Type ui:TextBlock}">
        <Setter Property="FontTypography" Value="CaptionStrong"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Enhanced Form Control Styles -->
    <Style x:Key="FormControlStyle" TargetType="{x:Type Control}">
        <Setter Property="Margin" Value="{StaticResource MediumMargin}"/>
    </Style>

    <Style x:Key="FormGroupStyle" TargetType="{x:Type StackPanel}">
        <Setter Property="Margin" Value="{StaticResource MediumMargin}"/>
        <Setter Property="Orientation" Value="Vertical"/>
    </Style>

    <!-- Enhanced TextBox Style -->
    <Style x:Key="ModernTextBoxStyle" TargetType="{x:Type ui:TextBox}" BasedOn="{StaticResource FluentTextBoxStyle}">
        <!-- Additional customizations can be added here -->
    </Style>

    <!-- Enhanced Button Styles -->
    <Style x:Key="PrimaryButtonStyle" TargetType="{x:Type ui:Button}" BasedOn="{StaticResource FluentPrimaryButtonStyle}">
        <!-- Additional customizations can be added here -->
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="{x:Type ui:Button}" BasedOn="{StaticResource FluentSecondaryButtonStyle}">
        <!-- Additional customizations can be added here -->
    </Style>

    <Style x:Key="IconButtonStyle" TargetType="{x:Type ui:Button}" BasedOn="{StaticResource {x:Type ui:Button}}">
        <Setter Property="Appearance" Value="Transparent"/>
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
    </Style>

    <!-- Status Bar Style -->
    <Style x:Key="StatusBarStyle" TargetType="{x:Type ui:InfoBar}">
        <Setter Property="IsOpen" Value="True"/>
        <Setter Property="IsClosable" Value="False"/>
        <Setter Property="Severity" Value="Informational"/>
        <Setter Property="Margin" Value="8,4,8,8"/>
    </Style>

    <!-- Loading Overlay Style -->
    <Style x:Key="LoadingOverlayStyle" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="#80000000"/>
        <Setter Property="Visibility" Value="Collapsed"/>
    </Style>

    <!-- Loading Card Style -->
    <Style x:Key="LoadingCardStyle" TargetType="{x:Type ui:Card}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="32"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <!-- Enhanced Icon Styles -->
    <Style x:Key="MenuIconStyle" TargetType="{x:Type ui:SymbolIcon}">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
    </Style>

    <Style x:Key="ToolbarIconStyle" TargetType="{x:Type ui:SymbolIcon}">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
    </Style>

    <Style x:Key="StatusIconStyle" TargetType="{x:Type ui:SymbolIcon}">
        <Setter Property="Width" Value="14"/>
        <Setter Property="Height" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
    </Style>

    <!-- Enhanced Menu Styles -->
    <Style x:Key="ModernMenuStyle" TargetType="{x:Type Menu}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    <Style x:Key="ModernMenuItemStyle" TargetType="{x:Type MenuItem}">
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="2,1"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="{DynamicResource SubtleFillColorSecondaryBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Item List Style -->
    <Style x:Key="ItemListStyle" TargetType="{x:Type ListView}">
        <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
        <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Item Template Container Style -->
    <Style x:Key="ItemTemplateStyle" TargetType="{x:Type Grid}">
        <Setter Property="Margin" Value="4"/>
    </Style>

    <!-- Enhanced Thumbnail and Image Styles -->
    <Style x:Key="ThumbnailPlaceholderStyle" TargetType="{x:Type Rectangle}">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Fill" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
        <Setter Property="Stroke" Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="RadiusX" Value="2"/>
        <Setter Property="RadiusY" Value="2"/>
    </Style>

    <Style x:Key="ThumbnailImageStyle" TargetType="{x:Type Image}">
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="StretchDirection" Value="Both"/>
        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{DynamicResource SystemChromeBlackLowColor}"
                                  Direction="270" 
                                  ShadowDepth="1" 
                                  BlurRadius="3" 
                                  Opacity="0.1" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Modern Progress Indicators -->
    <Style x:Key="ModernProgressRingStyle" TargetType="{x:Type ui:ProgressRing}">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Foreground" Value="{DynamicResource SystemAccentColorBrush}"/>
    </Style>

    <Style x:Key="LargeProgressRingStyle" TargetType="{x:Type ui:ProgressRing}">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Foreground" Value="{DynamicResource SystemAccentColorBrush}"/>
    </Style>

    <!-- Enhanced Separator Styles -->
    <Style x:Key="ModernSeparatorStyle" TargetType="{x:Type Separator}">
        <Setter Property="Background" Value="{DynamicResource DividerStrokeColorDefaultBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="{StaticResource MediumMargin}"/>
    </Style>

    <!-- Modern ScrollViewer Style -->
    <Style x:Key="ModernScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="CanContentScroll" Value="True"/>
        <Setter Property="PanningMode" Value="VerticalOnly"/>
    </Style>

    <!-- Animation Styles -->
    <Style x:Key="FadeInAnimationStyle" TargetType="{x:Type FrameworkElement}">
        <Setter Property="Opacity" Value="0"/>
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         To="1"
                                         Duration="{StaticResource MediumAnimationDuration}"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <!-- Hover Animation Style -->
    <Style x:Key="HoverScaleStyle" TargetType="{x:Type FrameworkElement}">
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                             To="1.02"
                                             Duration="{StaticResource FastAnimationDuration}"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                             To="1.02"
                                             Duration="{StaticResource FastAnimationDuration}"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                             To="1"
                                             Duration="{StaticResource FastAnimationDuration}"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                             To="1"
                                             Duration="{StaticResource FastAnimationDuration}"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Modern Expander Style -->
    <Style x:Key="ModernExpanderStyle" TargetType="{x:Type Expander}" BasedOn="{StaticResource FluentExpanderStyle}">
        <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Modern Context Menu Style -->
    <Style x:Key="ModernContextMenuStyle" TargetType="{x:Type ContextMenu}">
        <Setter Property="Background" Value="{DynamicResource LayerFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{DynamicResource SystemChromeBlackMediumColor}"
                                  Direction="270" 
                                  ShadowDepth="8" 
                                  BlurRadius="16" 
                                  Opacity="0.3" />
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>