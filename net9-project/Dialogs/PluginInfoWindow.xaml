<?xml version="1.0" encoding="utf-8"?>
<ui:FluentWindow x:Class="ItemEditor.Dialogs.PluginInfoWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d"
                 Title="Plugin Information"
                 Width="600"
                 Height="500"
                 MinWidth="500"
                 MinHeight="400"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="CanResize">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <ui:Card Grid.Row="0" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Plugin Icon -->
                <ui:SymbolIcon Grid.Column="0" 
                              Symbol="Puzzle24" 
                              FontSize="32" 
                              Margin="0,0,16,0"
                              VerticalAlignment="Center"/>
                
                <!-- Plugin Basic Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <ui:TextBlock Text="{Binding Name}" 
                                 FontTypography="TitleLarge" 
                                 Margin="0,0,0,4"/>
                    <ui:TextBlock Text="{Binding Description}" 
                                 FontTypography="Body" 
                                 Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                 TextWrapping="Wrap"/>
                </StackPanel>
                
                <!-- Status Indicator -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Border Width="16" Height="16" CornerRadius="8" Margin="0,0,0,4">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding StatusColor}"/>
                        </Border.Background>
                    </Border>
                    <ui:TextBlock Text="{Binding StatusText}" 
                                 FontTypography="Caption" 
                                 HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </ui:Card>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                
                <!-- General Information -->
                <ui:Card>
                    <StackPanel>
                        <ui:TextBlock Text="General Information" 
                                     FontTypography="BodyStrong" 
                                     Margin="0,0,0,12"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ui:TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" FontTypography="Body" Margin="0,0,0,8"/>
                            <ui:TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Version}" FontTypography="Body" Margin="0,0,0,8"/>
                            
                            <ui:TextBlock Grid.Row="1" Grid.Column="0" Text="Author:" FontTypography="Body" Margin="0,0,0,8"/>
                            <ui:TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Author}" FontTypography="Body" Margin="0,0,0,8"/>
                            
                            <ui:TextBlock Grid.Row="2" Grid.Column="0" Text="Category:" FontTypography="Body" Margin="0,0,0,8"/>
                            <ui:TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Category}" FontTypography="Body" Margin="0,0,0,8"/>
                            
                            <ui:TextBlock Grid.Row="3" Grid.Column="0" Text="Type:" FontTypography="Body" Margin="0,0,0,8"/>
                            <ui:TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding PluginType}" FontTypography="Body" Margin="0,0,0,8"/>
                            
                            <ui:TextBlock Grid.Row="4" Grid.Column="0" Text="File Path:" FontTypography="Body" Margin="0,0,0,8"/>
                            <ui:TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding FilePath}" FontTypography="Body" TextWrapping="Wrap" Margin="0,0,0,8"/>
                            
                            <ui:TextBlock Grid.Row="5" Grid.Column="0" Text="Loaded At:" FontTypography="Body"/>
                            <ui:TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding LoadedAt, StringFormat='{0:yyyy-MM-dd HH:mm:ss}'}" FontTypography="Body"/>
                        </Grid>
                    </StackPanel>
                </ui:Card>
                
                <!-- Supported Clients -->
                <ui:Card Visibility="{Binding HasSupportedClients, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <ui:TextBlock Text="Supported Clients" 
                                     FontTypography="BodyStrong" 
                                     Margin="0,0,0,12"/>
                        
                        <ItemsControl ItemsSource="{Binding SupportedClients}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:TextBlock Text="{Binding}" 
                                                 FontTypography="Body" 
                                                 Margin="0,0,0,4"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ui:Card>
                
                <!-- Dependencies -->
                <ui:Card Visibility="{Binding HasDependencies, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <ui:TextBlock Text="Dependencies" 
                                     FontTypography="BodyStrong" 
                                     Margin="0,0,0,12"/>
                        
                        <ItemsControl ItemsSource="{Binding Dependencies}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <ui:TextBlock Grid.Column="0" 
                                                     Text="{Binding Name}" 
                                                     FontTypography="Body" 
                                                     VerticalAlignment="Center"/>
                                        
                                        <ui:TextBlock Grid.Column="1" 
                                                     Text="{Binding VersionRange}" 
                                                     FontTypography="Caption" 
                                                     Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                     VerticalAlignment="Center"
                                                     Margin="8,0"/>
                                        
                                        <ui:Badge Grid.Column="2" 
                                                 Content="{Binding Type}"
                                                 Appearance="Secondary"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ui:Card>
                
                <!-- Configuration -->
                <ui:Card Visibility="{Binding HasConfiguration, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <ui:TextBlock Text="Configuration" 
                                     FontTypography="BodyStrong" 
                                     Margin="0,0,0,12"/>
                        
                        <ui:TextBlock Text="This plugin supports configuration." 
                                     FontTypography="Body" 
                                     Margin="0,0,0,8"/>
                        
                        <ui:Button Content="Configure Plugin"
                                  Command="{Binding ConfigureCommand}"
                                  Appearance="Primary"
                                  HorizontalAlignment="Left"/>
                    </StackPanel>
                </ui:Card>
                
                <!-- Error Information -->
                <ui:Card Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <ui:TextBlock Text="Error Information" 
                                     FontTypography="BodyStrong" 
                                     Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                                     Margin="0,0,0,12"/>
                        
                        <ui:TextBlock Text="{Binding ErrorMessage}" 
                                     FontTypography="Body" 
                                     Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                                     TextWrapping="Wrap"/>
                    </StackPanel>
                </ui:Card>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,16,0,0">
            <ui:Button Content="Reload Plugin"
                      Command="{Binding ReloadCommand}"
                      Appearance="Secondary"
                      IsEnabled="{Binding CanReload}"
                      Margin="0,0,8,0"/>
            <ui:Button Content="Close"
                      Command="{Binding CloseCommand}"
                      Appearance="Primary"
                      IsCancel="True"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>