{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "ItemEditor": "Debug"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "HH:mm:ss "
    },
    "EnableFileLogging": false,
    "LogFilePath": "logs/itemeditor.log"
  },
  "Application": {
    "Name": "ItemEditor",
    "Version": "2.0.0",
    "Theme": "Auto"
  },
  "Plugins": {
    "Directory": "Plugins",
    "AutoLoad": true,
    "LoadTimeout": 30000
  },
  "Files": {
    "RecentFilesCount": 10,
    "AutoBackup": true,
    "BackupDirectory": "Backups"
  }
}